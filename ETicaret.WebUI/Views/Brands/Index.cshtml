@model BrandPageViewModel
@{
    ViewData["Title"] = Model.Brand.Name;
}

<div class="container-fluid pt-5 pb-3">
    <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">@Model.Brand.Name</span></h2>
</div>

<!-- Breadcrumb Start -->
<div class="container-fluid">
    <div class="row px-xl-5">
        <div class="col-12">
            <nav class="breadcrumb bg-light mb-30">
                <a class="breadcrumb-item text-dark" href="/">Anasayfa</a>
                <a class="breadcrumb-item text-dark" href="@Model.Brand.Id">@Model.Brand.Name</a>
                <span class="breadcrumb-item active">Alışveriş Listesi</span>
            </nav>
        </div>
    </div>
</div>
<!-- Breadcrumb End -->
<partial name="_Products1" model="Model.Products" />
